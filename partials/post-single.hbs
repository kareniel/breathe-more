<article class="{{post_class}}">
  <header class="post-header">
    <h1><a href="{{url}}" class="permalink">{{title}}</a></h1>
  </header>

  <div class="post-content">
  {{content}}
  </div>

  {{^is "page"}}

  <footer class="post-footer">
    <hr>
    <p>Posted on 
      <a href="{{url}}">
        <time class="post-time" datetime="{{date format='YYYY-MM-DD'}}">{{date}}</time>. 
      </a>
      <span> | </span>
      <a href="{{url}}#disqus_thread"> Comments</a>
    </p>
    <hr>
  </footer>
  {{/is}}
  <!-- Begin MailChimp Signup Form-->
  <div id="mc_embed_signup">
    <form id="mc-embedded-subscribe-form" action="//jonathandupre.us3.list-manage.com/subscribe/post?u=fb49e881e49935ba9e9c15c3f&amp;id=7e054d06fe" method="post" name="mc-embedded-subscribe-form" target="_blank" novalidate="" class="validate">
      <div id="mc_embed_signup_scroll">
        <h2>Get Updates</h2>
        <p>Directly in your inbox every once in a while.</p>
        <div class="mc-field-group">
          <input id="mce-EMAIL" type="email" value="" placeholder="Enter your email" name="EMAIL" class="required email"/>
        </div>
        <div id="mce-responses" class="clear">
          <div id="mce-error-response" style="display:none" class="response"></div>
          <div id="mce-success-response" style="display:none" class="response"></div>
        </div>
        <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
        <div style="position: absolute; left: -5000px;" aria-hidden="true">
          <input type="text" name="b_fb49e881e49935ba9e9c15c3f_7e054d06fe" tabindex="-1" value=""/>
        </div>
        <div class="clear">
          <input id="mc-embedded-subscribe" type="submit" value="Subscribe" name="subscribe" class="button"/>
        </div>
      </div>
    </form>
  </div>
  <!-- End mc_embed_signup-->
</article>
